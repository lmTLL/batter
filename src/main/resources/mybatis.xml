<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- mybatis主配置文件 -->
<configuration>

		<settings>
		<!-- 配置mybatis运行过程中日志输出的技术选型的，mybatis支持多种日志输出，内置STDOUT_LOGGING -->
		<!-- 配置这个之后，mybatis运行过程中会输出执行的sql语句 -->
		<setting name="logImpl" value="STDOUT_LOGGING" />
	</settings>
	<typeAliases> 
	<!-- type 包名+类型，alias 指定别名 -->
	
		<typeAlias type="com.secondhand.com.secondhand.entity.User" alias="User"/>
		<typeAlias type="com.secondhand.com.secondhand.entity.Types" alias="Types"/>
	  	<typeAlias type="com.secondhand.com.secondhand.entity.Goodstypes" alias="Goodstypes"/>
	  	<typeAlias type="com.secondhand.com.secondhand.entity.Goodstatus" alias="Goodstatus"/>
<!-- 		<typeAlias type="com.qfedu.admin.entity.Role" alias="Role"/> -->
		
	</typeAliases>
	
	
		<plugins>
		<!-- PageHelper4.1.1 -->
		<plugin interceptor="com.github.pagehelper.PageHelper">
			<property name="dialect" value="mysql" />
			<!-- always总是返回PageInfo类型,check检查返回类型是否为PageInfo,none返回Page -->
			<property name="returnPageInfo" value=" always" />
			<!-- 设置为true时，使用RowBounds分页会进行count查询 -->
			<property name="rowBoundsWithCount" value="true" />
			<!-- 设置为true时，如果pageSize=0或者RowBounds.limit = 0就会查询出全部的结果 -->
			<property name="pageSizeZero" value="true" />
			<!-- 启用合理化时，如果pageNum<1会查询第一页，如果pageNum>pages会查询最后一页 -->
			<!-- 禁用合理化时，如果pageNum<1或pageNum>pages会返回空数据 -->
			<property name="reasonable" value="true" />
			<!-- 支持通过Mapper接口参数来传递分页参数 -->
			<property name="supportMethodsArguments" value="true" />

		</plugin>
	</plugins>
	
	
	


	
</configuration>
